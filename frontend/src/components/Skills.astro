<section id="skills" class="py-20 section-hidden">
    <h2 class="text-center text-4xl font-bold mb-12 text-primary">Habilidades</h2>
    <div class="container mx-auto px-4 grid grid-cols-1 md:grid-cols-3 gap-8">
        
        <div class="relative bg-glass backdrop-blur-glass border-glass rounded-lg shadow-xl p-6 overflow-hidden card-container">
            <div class="robot-mascot"><i class="fas fa-robot"></i></div>
            <div class="absolute top-1 right-1 text-5xl text-dark-text/10 dark:text-light-text/10 skill-icon">
                <lord-icon
                    src="https://cdn.lordicon.com/lupuorrc.json"
                    trigger="hover"
                    colors="primary:var(--primary),secondary:var(--accent)"
                    style="width:60px;height:60px">
                </lord-icon>
            </div>
            <h3 class="relative text-xl font-bold text-dark-text dark:text-light-text mb-2">Frontend</h3>
            <p class="relative text-dark-text/90 dark:text-light-text/90">HTML, CSS, JavaScript, Astro, React, Vue.js, Bootstrap, Tailwind CSS</p>
        </div>

        <div class="relative bg-glass backdrop-blur-glass border-glass rounded-lg shadow-xl p-6 overflow-hidden card-container">
            <div class="robot-mascot"><i class="fas fa-robot"></i></div>
            <div class="absolute top-1 right-1 text-5xl text-dark-text/10 dark:text-light-text/10 skill-icon">
                <lord-icon
                    src="https://cdn.lordicon.com/futocyqk.json"
                    trigger="hover"
                    colors="primary:var(--primary),secondary:var(--accent)"
                    style="width:60px;height:60px">
                </lord-icon>
            </div>
            <h3 class="relative text-xl font-bold text-dark-text dark:text-light-text mb-2">Backend</h3>
            <p class="relative text-dark-text/90 dark:text-light-text/90">Node.js, Express, Python, Django, Java, Spring Boot, PHP, Laravel</p>
        </div>

        <div class="relative bg-glass backdrop-blur-glass border-glass rounded-lg shadow-xl p-6 overflow-hidden card-container">
            <div class="robot-mascot"><i class="fas fa-robot"></i></div>
            <div class="absolute top-1 right-1 text-5xl text-dark-text/10 dark:text-light-text/10 skill-icon">
                <lord-icon
                    src="https://cdn.lordicon.com/database.json"
                    trigger="hover"
                    colors="primary:var(--primary),secondary:var(--accent)"
                    style="width:60px;height:60px">
                </lord-icon>
            </div>
            <h3 class="relative text-xl font-bold text-dark-text dark:text-light-text mb-2">Bases de Datos</h3>
            <p class="relative text-dark-text/90 dark:text-light-text/90">MongoDB, SQL, PostgreSQL, MySQL</p>
        </div>
    </div>
</section>
